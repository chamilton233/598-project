<div>
  
  <h2>New Comment</h2>
  <form method="POST" action="/posts/<%=date%>">

    <label>User</label>
    <input type="text" name="title" required/>

    <label>Content</label>
    <textarea name="content" rows="10" required></textarea>

    <input type="submit" value="Post"/>
  </form>
  
</div>